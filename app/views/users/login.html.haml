#mobile-login.visible-xs
  .mobile-login__main.visible-xs.clearfix
    -if user_signed_in?
      / .modal-inner__left.col-xs-6
      /   .modal-title
      /     ログアウト
      /   .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-pink-2= link_to "ログアウト", destroy_user_session_path, method: :delete
    - else
      .modal-inner__left.col-xs-6
        .mobile-modal-title
          ログイン
        .modal-head.u-pb15
          %i
          すでにユーザー登録されている方
        .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-pink-2= link_to "ユーザーログイン", new_user_session_path(:u_n => 1)
        .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-pink-2= link_to "管理栄養士ログイン", new_user_session_path(:u_n => 0)
        .facebook-btn-container
          .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-facebook-2= link_to "Facebookでログイン", user_omniauth_authorize_path(:facebook)
          .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-twitter-2= link_to "Twitterでログイン",  user_omniauth_authorize_path(:twitter)
    -if user_signed_in? && current_user.permission == nil
      / .modal-inner__right.col-xs-6
      /   .modal-title
      /     マイページ
      /   .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-yellow-2= link_to "マイページへ移動", current_user
    - elsif user_signed_in? && current_user.permission != nil
      / .modal-inner__right.col-xs-6
      /   .modal-title
      /     マイページ
      /   .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-yellow-2= link_to "マイページへ移動", current_user
    - else
      .modal-inner__right.col-xs-6
        .mobile-modal-title
          新規登録
        .modal-head.u-pb15
          %i
          ユーザー登録されていない方
        .button-container
          .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-yellow-2= link_to "ユーザーの新規登録", new_user_registration_path(:u_n => 1)
        .button-container
          .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-yellow-2= link_to "管理栄養士の新規登録",new_user_registration_path(:u_n => 0)
        .facebook-btn-container
          .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-facebook-2= link_to "Facebookで新規登録", user_omniauth_authorize_path(:facebook)
          .mobile-modal-inner__btn.c-btn.c-btn--mobile-login.u-twitter-2= link_to "Twitterで新規登録",  user_omniauth_authorize_path(:twitter)