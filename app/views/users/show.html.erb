<body>


  <div id="wrapper">
    <!-- Header -->
    <%= render 'layouts/header' %>
    <!-- Header -->

    

    <div class="contents" id="mypage">

      <div class="title-bar">
        <i class="title-icon icon-nife-fork-2"></i>
        マイページ
        <% if @user == current_user %>
          <div class="recipe-edit-btn">
              <%= link_to "プロフィールを編集する", edit_user_registration_path(@user) %>
          </div>
        <% end %>
      </div>

      <div class="mypage-content">

        <div class="author-img-sp-container">
          <div class="inner mykitchen-head"> <%= @user.name %>さん</div>
          <ul >
          <div class="author-img-sp">
              <div class="profile-image" style="background-image: url('<%= @user.image.url %>');">
              </div>
          <!--   <%= profile_image_for @user %> -->
          </div>
          <!-- <a href="#" class="author-img-edit">
            <i class="icon-star"></i>
            あなたの写真を変更する
          </a> -->
          
        </div>

        <h2 class="mt-56 title-bar">
          <i class="icon-chef-hat-spoun title-icon"></i>
          Myキッチン 〜レシピ〜
        </h2>

        <div class="container inner-30 mykitchen-container">
          <div class="inner mykitchen-head"> <%= @user.name %>さんの投稿したレシピ</div>
          <ul >
            <% @recipes.each do |recipe| %>
            <li class="col col-12 inner">
              <div class="menu-title">
                  <%= link_to recipe.name, recipe_path(recipe) %>
              </div>

              <div class="menu-img">
                <!-- <a href="recipe.html">
                  <img src="images/mypage-recipe-1.jpg" alt="" class="photo">
                </a> -->
                 <%= link_to recipe_path(recipe) do %>
                    <div class="recommended-image photo" style="background-image: url('<%= recipe.image.url %>');">
                    </div>
                  <% end %>
              </div>
            </li>
            <% end %>
          </ul>
        </div> 

        <!-- <div class="centering">
          <div class="read-more-container">
