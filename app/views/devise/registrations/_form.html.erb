<h2 class="title-bar"><i class="title-icon icon-l icon-nife-fork"></i>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

  <% if @u_n == "1"  %>
      <div class="container-full inner-30">
       <div class="container-full inner-30">
        <div class=" gutters row">
          <div class="col col-20">
            <div class="edit-recipe-title-container">
              <div class="sp-head "> <i class="icon-s icon-pencil"></i>お名前</div>
              <div class="edit-area">  
                <%= f.text_field :name, class:'edit-field edit-recipe-title', placeholder:'お名前を入力', rows:'2' %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="gutters row pb-30 pt-30">
          <div class="col col-12">
            <div class="edit-recipe-copy">
              <div class="sp-head edit-label">
                <div class="sp-head "> <i class="icon-s icon-play"></i>性別を選択</div><br>
                <label><%= f.radio_button :gender, "1" %>男</label>
                <label><%= f.radio_button :gender, "2" %>女</label>
              </div>
            </div>


            <div class="sp-head"><br><br><br><i class="icon-s icon-image"></i>写真</div>
            <div class="edit-recipe-img-container">    
              <div class="centering">
               <div class="edit-recipe-img-typetext imgInput">
                <%= f.file_field :image %>
                <%= image_tag("no_image.png", :class => "imgView ", :size => "225x225") %>
              </div>
            </div>
          </div>
        </div>
        

        <div class="col col-12 inner">
          <br>
          <div class="sp-head edit-label">
           <i class="icon-s icon-play"></i>&nbsp;メールアドレス
         </div>
         <div class="field">
          <div class="fields">
            <ul class="inner-30 edit-ingredient-container">
             <%= f.email_field :email, autofocus: true, class:'edit-field edit-recipe-title' %>
           </ul>
           </div>  
         </div>
        </div>



      <div class="col col-12 inner">
        <br>
        <div class="sp-head edit-label">
         <i class="icon-s icon-play"></i>&nbsp;パスワード(6～20桁で設定してください)
       </div>
       <div class="field">
        <div class="fields">
          <ul class="inner-30 edit-ingredient-container">
           <% if @validatable %>
           <em>(<%= @minimum_password_length %> characters minimum)</em>
           <% end %><br />
           <%= f.password_field :password, autocomplete: "off",class:'edit-field edit-recipe-title' %> 
         </ul>
         </div>  
        </div>
        </div>



      <div class="col col-12 inner">
        <br>
        <div class="sp-head edit-label">
          <i class="icon-s icon-play"></i>&nbsp;パスワード確認
        </div>
        <div class="field">
          <div class="fields">
            <ul class="inner-30 edit-ingredient-container">
             <%= f.password_field :password_confirmation, autocomplete: "off",class:'edit-field edit-recipe-title' %>
           </ul>
         </div>  
         </div>
        </div>
        </div>  


  <% else %>

       <div class="container-full inner-30">
        <div class=" gutters row">
          <div class="col col-20">
            <div class="edit-recipe-title-container">
              <div class="sp-head "> <i class="icon-s icon-pencil"></i>お名前</div>
              <div class="edit-area">  
                <%= f.text_field :name, class:'edit-field edit-recipe-title', placeholder:'お名前を入力', rows:'2' %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="gutters row pb-30 pt-30">
          <div class="col col-12">
            <div class="edit-recipe-copy">
              <div class="sp-head edit-label">
                <div class="sp-head "> <i class="icon-s icon-play"></i>自己紹介文</div><br>
                <%= f.text_area :nutritionist_description, class:'edit-field', placeholder:'選択して編集する', rows:'3', cols:'30' %>
              </div>
            </div>


            <div class="sp-head"><br><br><br><i class="icon-s icon-image"></i>写真</div>
            <div class="edit-recipe-img-container">    
              <div class="centering">
               <div class="edit-recipe-img-typetext imgInput">
                <%= f.file_field :image %>
                <%= image_tag("no_image.png", :class => "imgView ", :size => "225x225") %>
              </div>
            </div>
          </div>
        </div>
        

        <div class="col col-12 inner">
          <br>
          <div class="sp-head edit-label">
           <i class="icon-s icon-play"></i>&nbsp;メールアドレス
         </div>
         <div class="field">
          <div class="fields">
            <ul class="inner-30 edit-ingredient-container">
             <%= f.email_field :email, autofocus: true, class:'edit-field edit-recipe-title' %>
           </ul>
         </div>  
       </div>
      </div>



      <div class="col col-12 inner">
        <br>
        <div class="sp-head edit-label">
         <i class="icon-s icon-play"></i>&nbsp;パスワード
       </div>
       <div class="field">
        <div class="fields">
          <ul class="inner-30 edit-ingredient-container">
           <% if @validatable %>
           <em>(<%= @minimum_password_length %> characters minimum)</em>
           <% end %><br />
           <%= f.password_field :password, autocomplete: "off",class:'edit-field edit-recipe-title' %> 
         </ul>
       </div>  
      </div>
      </div>



      <div class="col col-12 inner">
        <br>
        <div class="sp-head edit-label">
          <i class="icon-s icon-play"></i>&nbsp;パスワード確認
        </div>
        <div class="field">
          <div class="fields">
            <ul class="inner-30 edit-ingredient-container">
             <%= f.password_field :password_confirmation, autocomplete: "off",class:'edit-field edit-recipe-title' %>
           </ul>
         </div>  
       </div>
      </div>
      </div>  

      <%= f.hidden_field :permission, :value => 1 %>


<% end %>


<div class="actions centering mt-56 create-recipe-btn-container" >       
  <%= f.submit "新規登録する", class: 'create-recipe-btn' %>
</div>

<div class="centering">
 <%= link_to "Facebookでログイン", user_omniauth_authorize_path(:facebook), class:'facebook-btn' %>
 <br>
 <%= link_to "Twitterでログイン",  user_omniauth_authorize_path(:twitter), class:'twitter_btn' %>
</div>

</div>
</div>
<% end %>

<%= render "devise/shared/links" %>
