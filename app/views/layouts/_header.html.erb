<!-- ヘッダー -->
<header id="header">
  <div class="header-container pc-header clear">
    <div class="header-inner clear">
      <div class="logo-container">
        <h1>
          <%= link_to image_tag("logo-small.png" , class: "logo", alt: "dnote"), about_path %>
        </h1>
      </div>

      <ul class="search-container">
        <li class="keyword-search">
          <%= form_tag recipes_path, :method => 'get' do %>
          <p>
            <%= text_field_tag :search, params[:search] , class: "search-bar"%>
            <%= button_tag '<i class="icon-search icon-m"></i>'.html_safe, :type => "submit", :class =>"btn btn-default btn-s-md search-submit" %>
          </p>
          <% end %>
        </li>

        <li class="category-search-container">
          <a href="#is-category-dropdown-box" class="category-search" id="is-category-dropdown-switch">
            カテゴリから探す<i class="icon-s icon-play"></i>
          </a>
          
          <ul class="category-list" id="is-category-dropdown-box">
            <li class="category-item">
              <%= link_to 'カロリー表示あり', calories_path %>
            </li>

            <% Recipe.categories.each do |key, value| %>
            <li class="category-item">
              <%= link_to value, categories_path(:r_category => key)%>
            </li>
            <% end %>
            
          </ul>
        </li>
      </ul>
      <ul class="user-menu-container">
        <li class="signup">
          <a href="#modal" > 
            <i class="icon-new-account icon-s"></i>
            <% if user_signed_in?  %>
            ログアウト<span style="font-weight:normal;">&nbsp;/&nbsp;</span>マイページ
            <% else %>
            新規登録<span style="font-weight:normal;">&nbsp;/&nbsp;</span>ログイン
            <% end %>
          </a>
        </li>

        <% if user_signed_in? %>
          <li class="signup">
            <%= link_to "レシピをのせる", new_recipe_path, class:'icon-edit post-recipe-text' %>
          </li>
          <li class="signup">
            <%= link_to "献立をのせる", new_menu_path, class:'icon-edit post-recipe-text' %>
          </li>
          <li class="signup">
            <% if @permission == "1" %>
              <%= link_to "コラムを投稿する", about_path, class:'icon-edit post-recipe-text',data: { confirm: "コラムを投稿するには管理人の許可が必要です" } %>
            <% elsif @permission == "2" %>
              <%= link_to "コラムを投稿する", new_column_path, class:'icon-edit post-recipe-text' %>
            <% end %>
          </li>
        <% else %>
          <li class="signup">
            <a href="#modal" >
              <i class='icon-edit post-recipe-text'></i>レシピをのせる
            </a>
          </li>
          <li class="signup">
            <a href="#modal" >
              <i class='icon-edit post-recipe-text'></i>献立をのせる
            </a>
          </li>
        <% end %>

      </ul>
    </div>
  </div>

  <!--  SmartphoneHeader-->
  <div class="header-container sp-header clear">
    <div class="header-inner clear">
      <div class="menu-btn" id="menu-btn">

      </div>

      <div class="sp-logo-container">
        <!-- <a href="index.html"> -->
        <!-- <img src="/assets/logo.png" alt="dnote" class="logo"> -->
        <%= link_to image_tag("logo.png"), about_path, class: "logo", alt: "dnote" %>
        <!-- </a> -->
      </div>

      <div class="account-btn">
        <a href="#modal">
          <i class="icon-login"></i><br>
          <% if user_signed_in? %>
          Myページ
          <% else %>
          ログイン
          <% end %>
        </a> 
      </div>
    </div>
  </div>
</header>