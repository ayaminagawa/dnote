%li.clearfix.u-pt5.hidden-xs
  .fields
    %i.col-sm-1.ingredient-sortable.fa.fa-arrows.fa-lg
    .field.col-sm-7= f.text_field :name, placeholder:'例) 鳥のむね肉', style:'width: 100%;height: 35px;'
    .field.col-sm-3= f.text_field :volume, placeholder:'例) 100g', style:'width: 100%;height: 35px;'  
