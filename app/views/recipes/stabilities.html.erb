            </a> -->
            <%= link_to menu_stability.name, menu_path(menu_stability) %>
          </div>

          <p class="menu-comment">
            <%= menu_stability.point %>
          </p>

          <ul class="menu-list sp-off">
              
              <!-- <li>
               <img src="images/menu-main-icon.png" alt="" class="menu-list-icon">
               <a href="recipe.html">
                ゴロゴロお肉のメキシカンスープ</a>
                
              </li>

              <li class="author">
                <!-- <a href="#">by つくったひと</a> -->
               
              <!-- </li> --> 

              <li class="author">
                <!-- <a href="#">by つくったひと</a> -->
               by <%= link_to menu_stability.user.name, user_path(menu_stability.user) %>
              </li>
             
            </ul>
        </div>
      </li>
       <% end %>
    </ul>
 

    <ul class="inner pt-30 tab-container menu-container" id="recipe-container">

      <!-- レシピひとつ分 -->
      <% @stabilities.each do |stability| %>
      <li class="gutters row menu">
        <div class="col col-11 col-xs col-xs-11">
          <div class="menu-img">
            <!-- <a href="recipe.html">
              <img src="images/mypage-recipe-1.jpg" alt="" class="photo">
            </a> -->
             <%= image_tag stability.image.url(:thumb), class: "photo" %>
          </div>
        </div>

            <div class="col col-13 col-xs col-xs-13">
              <div class="menu-title">
                <!-- <a href="recipe.html">
                  レシピタイトル
                </a> -->  
                <%= link_to stability.name, recipe_path(stability) %>
              </div>

              <p class="menu-comment">
                <%= stability.description %>
              </p>

              <div class="author">
                <!-- <a href="#">by つくったひと</a> -->
                by <%= link_to stability.user.name, recipe_path(stability)  %>
              </div>

            </div>
        </li>
        <% end %>    
      <!-- レシピひとつ分 -->
    </ul>
  </div>

</div>
<!-- tab-box -->

</div>

</div><!-- contents end-->
</div><!-- wrapper end-->

<!-- Footer -->
<%= render 'layouts/footer' %>
<!-- Footer -->


