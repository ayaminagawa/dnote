 <div class="contents" id="recipe-page">
  <div class="gutters row">
    <div class="col col-18 "> 
      <div class="title-bar">
        <i class="title-icon icon-cutlery"></i>
        <% if @recipe.pre_save == 1 %>
          下書き中のレシピ
        <% else %>
          レシピ
        <% end %>
        <div class="recipe-edit-btn">
          <% if current_user?(@recipe.user) %>
          <%= link_to "編集する", edit_recipe_path(@recipe) %>
          
          <%= link_to "削除する", @recipe, method: :delete,data: { confirm: "本当に削除しますか?" } %>
          <% end %>
        </div>
      </div>

      <div class="container-full inner-30">
        <div class=" gutters row">
          <div class="col col-16 col-xs col-xs-17">
            <div class="menu-title-large">
              <%= link_to @recipe.name, recipe_path(@recipe) %>
            </div>
          </div>

          <div class="col col-8 col-xs col-xs-6 centering">
            <div class="button recipe-save" id="save-btn">
              <span id="recipe_<%= @recipe.id %>">
                <%= render 'favorites/favorite_btn', recipe: @recipe %>
              </span>
            </div>
            <div class="button" id="tsukurepo-show">
            <% if user_signed_in? %>
              <span class="sp-off"><i class="title-icon icon-recipes-1"></i><br></span>
              <p>作ったよ</p>
            <% end %>
            </div>
          </div>
        </div>

          <div class="gutters row pb-30">
            <div class="col col-12">
              <div class="menu-img">
                <%= link_to recipe_path(@recipe) do %>
                <div class="recommended-image photo" style="background-image: url('<%= @recipe.image.url %>');">
                </div>
                <% end %>
              </div>

              <p class="menu-comment">
                <%= @recipe.description %>
              </p>

              <p class="recipe-author clear">
                <%= link_to @recipe.user.name, user_path(@recipe.user)%>
              </p>

              <% if @recipe.calorie.present? && @recipe.sugar.present? %>
              <div class="pull-left mt-30">
                <p class="kcal">
                  <i class="icon-scales"></i>
                  <%= @recipe.calorie %>Kcal
                  ,炭水化物量
                  <%= @recipe.sugar %>g
                  <br>
                  (1人あたり)
                </p>
              </div>

              <% elsif  @recipe.calorie.present? %>
              <div class="pull-left mt-30">
                <p class="kcal">
                  <i class="icon-scales"></i>
                  <%= @recipe.calorie %>Kcal(1人あたり)
                </p>
              </div>

              <% elsif @recipe.sugar.present? %>
              <div class="pull-left mt-30">
                <p class="kcal">
                  <i class="icon-scales"></i>
                  炭水化物量<%= @recipe.sugar %>g(1人あたり)
                </p>
              </div>
              <% end %>

            </div>

            <div class="col col-12">
              <ul class="ingredients"> 
                <li class="ingredient-head">材料
                  <% if @recipe.people == nil %>
                  <% else %>
                  <%= @recipe.people %>人分
                  <% end %>
                </li>
                <% @ingredients.each do |ingredient| %>
                <li class="ingredient">
                  <div class="ingredient-name">
                    <%= ingredient.name %>
                  </div>
                  <div class="ingredient-quantity">
                    <%= ingredient.volume %>
                  </div>
                </li>
                <% end %>
              </ul>
            </div>
          </div><!-- recipe-topここまで -->

          <hr>

          <div class="recipe-bottom pt-30 pb-30">

            <ul class="steps row">
              <li class="step-head pc-off">作り方</li>

              <% @procedures.each_with_index do | procedure, index | %>

              <li class="procedure_line　step col col-6">
                <div class="gutters row" >
                  <div class="step-img col col-xs col-xs-11">
                    <!-- <img src="images/step/step-1.jpg" alt="" class="photo"> -->
                    <% if procedure.image_file_name != nil %>
                      <div class="recommended-image photo" style="background-image: url('<%= procedure.image.url(:original) %>');">
                      </div>
                    <% end %>
                  </div>

                  <div class="col col-xs col-xs-12 step-info ">
                    <div class="step-count"><%= 1 + index %></div>
                    <p class="step-text" style="font-size:14px;">
                      <%= br(procedure.body) %>
                    </p>
                  </div>
                </div>
              </li>
              <% end %>

            </ul>

            <div class="row memo-history-container inner-30">
              <div class="memo-history recipe-memo col col-12">
                <h4 class="memo-head"><i class="title-icon icon-star"></i> コツ・ポイント</h4>
                <p class="memo-history-text">
                  <%= @recipe.tip %>
                </p>
              </div>

              <div class="memo-history recipe-history col col-12 sp-off">
                <h4 class="memo-head">レシピのカテゴリー</h4>
                <p class="memo-history-text">
                  <% Recipe.kinds2.each do |key, value| %>
                  <% if key == @recipe.kind %>
                  <%=  link_to value, kinds_path(:r_kind => key) %>
                  <% end %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div><!-- recipe-bottom -->


        <div class="container-full top-border-green">
          <div class="repo-container">

           
            <div class="repo-head">
              <i class="title-icon icon-recipes-1"></i> みんなの作ったよ回数：<%= @made_report_number %>
            </div>

            <ul class="gutters row repos">

              <% @made_reports.each do |made_report| %>
              <li class="col col-6 repo">


                <div class="repo-img made_report_image col-xs-8" style="float:left;">
                   <%= image_tag("tsukurepo.JPG", :alt => "", :class => "photo")%>
                </div>

                <% if made_report.message || made_report.image %>
                <div class="made_report_slidedown" style="display:none;">
                  <div class="recommended-image col-xs-15 col-24" style="background-image: url('<%= made_report.image.url %>');">
                  </div>
                 <p class="repo-text">
                    <%= made_report.message %>
                  </p>
                </div>
                <% end %>

                <p class="author pull-right">
                  <p>by <%= made_report.user.name %></p>
                </p>
                
              </li>
              <% end %>
            </ul>
          </div>
<!-- 
        <div class="read-more-accordion sp-off">
          <a href="#" class="is-toggle-switch">
            もっと見る
            <span class="accordion-arrow">
              <i class="icon-m green icon-circle-right"></i>
            </span>
          </a>

        </div> -->
      </div>

      
    </div>


    <div class="container-full col col-6 top-border-green recommend-container sp-off">
      <h4 class="recommend-head">おすすめのレシピ</h4>

      <ul class="recommends inner">
        <li class="recommend">
          <div class="recommend-img">
            <!-- <a href="recipe.html">
              <img src="images/nuturition-menu-1.jpg" alt="" class="photo">
            </a> -->
            <%= link_to recipe_path(@recommended_recipe) do %>
            <div class="recommended-image photo" style="background-image: url('<%= @recommended_recipe.image.url(:original) %>');">
            </div>
            <% end %>
          </div>
          <p class="menu-title recommend-title">
            <!-- <a href="recipe.html">サーモンのクリーム煮たっぷり香草和え
          </a> -->
          <%= link_to @recommended_recipe.name, recipe_path(@recommended_recipe) %>
        </p>
      </li>

    </ul>
  </div>
</div>

</div><!-- contents end-->
<%= render 'made_reports/form'%>


