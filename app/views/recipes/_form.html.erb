                      <a href="#" class="step-add">追加</a>
                    </div>
                  </div> -->
                  <div class="field">
                    <%= f.fields_for :procedures, @procedures do |procedure| %>
                      <%= render 'fields_procedure', {:f => procedure} %>
                    <% end %>
                  </div>
                </li>
                <!-- 作り方 -->
              </ul>

              <div class="centering">
                <div class="step-add-btn">
                 <%= link_to_add_fields "レシピを追加する", f, :procedures %>
                </div>
              </div>

              <div class="row edit-memo-history-container inner-30">
                <div class="memo-history memo-head recipe-memo col col-12">
                  <div class="sp-head edit-label ">
                    <i class="icon-star pc-off"></i>
                    コツ・ポイント
                  </div>

                  <div class="edit-area">
                    <!-- <form action="#" >
                      <textarea class="edit-field" rows="2" cols="30" name="value" placeholder="選択して編集する"></textarea>
                      <br>
                    </form> -->
                    
                       <%= f.text_field :tip, class:'edit-field', placeholder:'選択して編集する', rows:'2', cols:'30' %>
                    
                  </div>
                </div>

                <div class="col col-12 memo-history recipe-history edit-history ">
                 <div class="ml-30 sp-head edit-label">
                   このレシピのカロリー
                 </div>

                 <div class="ml-30 edit-area">
                  <!-- <form action="#" >
                    <textarea class="edit-field edit-kcal" placeholder="選択して編集する (例：400)"></textarea>
                  </form> -->
                   
                     <%= f.text_field :calorie, class:'edit-field edit-kcal', placeholder:'選択して編集する (例：400)' %>
                   
                </div>

              </div>
              <div>

                    <p>レシピカテゴリ</p><br><br>
                  
                    <label><%= f.radio_button :kind, "1", {:checked => true} %> 野菜のおかず</label>
                    <label><%= f.radio_button :kind, "2" %> お肉のおかず</label>
                    <label><%= f.radio_button :kind, "3" %> 魚介のおかず</label>
                    <label><%= f.radio_button :kind, "4" %> ごはんもの</label>
                    <label><%= f.radio_button :kind, "5" %> パスタ・グラタン</label>
                    <label><%= f.radio_button :kind, "6" %> 麺</label>
                    <label><%= f.radio_button :kind, "7" %> サラダ</label>
                    <label><%= f.radio_button :kind, "8" %> スープ・汁物</label>
                    <label><%= f.radio_button :kind, "9" %> お弁当</label>

              </div>
              <div>
                    <br>
                    <label><%= f.radio_button :recipe_select, "1", {:checked => true} %> 主菜</label>
                    <label><%= f.radio_button :recipe_select, "2" %> 副菜</label>
              </div>
              <div>
                    <br>
                    <label><%= f.radio_button :category, "1", {:checked => true} %> カロリー表示あり</label>
                    <label><%= f.radio_button :category, "2" %>糖質制限食 </label>
                    <label><%= f.radio_button :category, "3" %>HbA1c、血糖値の安定 </label>
                    <label><%= f.radio_button :category, "4" %>味に自信あり </label>
                    <label><%= f.radio_button :category, "5" %>すぐできるメニュー</label>

