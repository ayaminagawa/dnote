            <div class="centering mt-56 create-recipe-btn-container" >
<!--          <a href="#" class="create-recipe-btn">レシピを公開する</a> -->          
              <%= f.submit "レシピを公開する", class: 'create-recipe-btn' %>
            </div>

          </div>
          
        </div>
      </div>

<% end %>
